<%= render 'layouts/navigation' %>

  <div>
    <h1>Groups</h1>
  </div>
  <%= render 'form' %>
    <div class="container-fluid">
      <div class="d-flex border justify-content-between">
        <div class="d-flex col-md-3 border">
          <div class="col-md-12">
            <div>
              <% @groups.each do |group| %>
                <p>
                  <%= group.name %>
                </p>
                <%= link_to "Edit" , group_add_member_path(group) %>
                  <%= link_to "Delete" , group_path(group), method: :delete, data: {confirm: "Are you sure?" } %>
                    <% end %>
            </div>
          </div>
        </div>
        <div class="col-md-8 border">
          <h2>
            <%= @current_group.name %>
          </h2>
          <div class="col-md-12"></div>
          <%= form_tag group_search_member_path, remote: true, method: :get do %>
            <div class="form-group d-flex justify-content-between">
              <div class="col-3 align-self-center m-auto">
                <%= label :name, "Your Friend Name" , class: "col-form-label fw-bold" %>
              </div>
              <div class="col-sm-6 m-2 align-self-center m-auto">
                <%= text_field_tag :member, params[:member], placeholder: "Name or email" , autofocus: true,
                  class: "form-control" %>
              </div>
              <div class="col-2 align-self-center m-auto d-none">
                <%= button_tag type: :submit, class: "btn btn-success btn-lg" do %>
                  <%= 'Search' %>
                    <% end %>
              </div>
            </div>
            <% end %>
            <div id="member-results">
              
            </div>
              <% @members.each do |member| %>
                    <p><%= member.full_name %></p>
                    <%= link_to "Remove", group_destroy_member_path(member_id: member.id), :method=>"delete", data: {confirm: "Are you sure?"} %>
              <% end %>
        </div>
      </div>
    </div>
    </div>
<%= javascript_tag do %>
  document.getElementById('member').addEventListener('keyup', () => {
  document.getElementsByClassName('btn')[1].click();
});
<% end %>