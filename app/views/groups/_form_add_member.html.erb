<div class="search-area">
  <%= form_tag group_search_member_path, remote: true, method: :get do %>
  <div class="form-group row">
    <div class="col-sm-9 no-right-padding">
      <%= text_field_tag :member, params[:member], placeholder: "Name or email",
      autofocus: true, class: "form-control form-control-lg" %>
    </div>
    <div class="col-sm-3 no-left-padding">
      <%= button_tag type: :submit, class: "btn btn-success" do %> <%= 'Search'
      %> <% end %>
    </div>
  </div>
  <% end %>
</div>
