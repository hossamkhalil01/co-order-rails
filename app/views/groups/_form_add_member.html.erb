<%= form_with model: @member, url: group_add_member_path(@group_id) do |form| %>
<div class="d-flex g-3 justify-content-sm-center">
    <div class="col-1 align-self-center">
        <%= form.label :member_email, "Add member to group", class: "col-form-label fw-bold" %>
    </div>
    <div class="col-6 align-self-center m-2">
        <%= form.text_field :member_email, class: "form-control" %>
    </div>
    <div class="col-1 align-self-center">
        <%= form.submit "Add", class: "btn btn-primary" %>
    </div>
</div>
<% end %>