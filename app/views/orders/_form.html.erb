<%= render 'layouts/navigation' %>

<h1> New Order Form </h1>



<div class="row col-md-12" style="top:0%; left:0%; ">
        <div class="row col-md-6 " style="top:0%; left:0% ; ">
              <%= form_with model: @order do |form| %>
                  <p>
                    <%= form.label :meal_type %><br>
                    <%= form.select :meal_type, ['breakfast', 'lunch', 'dinner'], selected: 'lunch' %>
                  </p>

                  <p>
                    <%= form.label :restaurant %><br>
                    <%= form.text_field :restaurant %>
                  </p>
                  
    
                  <%
=begin%>
 <p>
                    <%= form.label :Friends %><br>
                    <%= form.text_field :email %>
                  </p>  
<%
=end%>

                  <p>
                    <%= form.label :Groups %><br>
                   <%= form.collection_select :test_groups, current_user.groups.all , :id, :name ,{ :prompt => "Please Invite your groups"},
                                   { :multiple => true}%>
                  </p> 

                  <p>
                    <%= form.label :Friends %><br>
                    <%= form.collection_select :test_users, current_user.friends.all , :id, :email ,{ :prompt => "Please Invite your friends"},
                                   { :multiple => true }%>
                  </p> 

                  <p>
                    <%= form.label :menu_image %>
                    <%= form.file_field :menu_image, accept: 'image/jpeg, image/gif, image/png, /image/jpg' %>
                  </p>

                  <p>
                    <%= form.submit %>
                  </p>
                <% end %>




        </div>






        <div class="col-md-6 row overflow-auto" style="top:0%; left:0% ; max-height: 400px;">
              <div class="row col-md-12">

                  <div class="search-area">
                    <%= form_tag search_invited_path, remote: true, method: :get do %>
                    <div class="form-group row">
                      <div class="col-sm-9 no-right-padding">
                        <%= text_field_tag :invited , params[:invited], placeholder: "Add friend or group ",
                        autofocus: true, class: "form-control form-control-lg" %>
                      </div>
                      <div class="col-sm-3 no-left-padding">
                        <%= button_tag type: :submit, class: "btn btn-success" do %> <%= 'Search'
                        %> <% end %>
                      </div>
                    </div>
                    <% end %>
                  </div>

                 

              </div>



              <div class="row col-md-12">
               <div id="order-member-result">
               some result here 
                </div>
                        
              </div>
          

        </div>
        
</div>










