<%= render 'layouts/navigation' %>

<div style="padding: 1%">
    <h1 style="margin-top: 2%;"> Order Details </h1>
    <h3> <%= @order.meal_type %> From <%= @order.restaurant %> </h3>

    <table class="table table-striped" style="margin-top: 3%;">

        <thead>
            <tr class="text-center">
                <th scope="col">Person</th>
                <th scope="col">Item</th>
                <th scope="col">Amount</th>
                <th scope="col">Price</th>
                <th scope="col">Comment</th>
            </tr>

        </thead>

        <tbody>
            <% for detail in @order_details do %>

            <tr class="text-center">
                <td> <%= detail.orderer.first_name %> </td>
                <td> <%= detail.item %> </td>
                <td> <%= detail.amount %> </td>
                <td> <%= detail.price %> </td>
                <td> <%= detail.comment %> </td>
            </tr>

            <% end %>
        </tbody>

    </table>

    <div class="d-flex justify-content-center">
        <a class="btn btn-primary w-25 mt-5" href="<%= orders_path %>" role="button">
            Back to Orders
        </a>
    </div>

</div>