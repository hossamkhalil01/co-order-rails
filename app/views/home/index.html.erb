<%= render 'layouts/navigation' %>
<div class="row col-md-12 justify-content-around mt-5 p-5 ">

    <div class="row col-md-5 ">
        <table class="table table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Latest Orders</th>
                </tr>
            </thead>
            <tbody >
                <%= render partial: "latest_order", collection: @latest_orders %>
            </tbody>
        </table>
    </div>

    <div class="row col-md-5">
        <table class="table table-bordered table-hover text-center ">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Friends Activities</th>
                </tr>
            </thead>
            <tbody>
                <% @friends.each do |friend| %>
                <%= render partial: "friends_activities", collection: friend.orders.order(created_at: :desc).limit(5) %>
                <% end %>
            </tbody>
        </table>
    </div>
</div>