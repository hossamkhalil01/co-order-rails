<%= render 'layouts/navigation' %>


<div>
    <h1 class="title">My Friends</h1>
    <%= form_with model: @friend, local: true do |form| %>
    <div class="row">
        <div class="col-md-3 ">
            <%= form.label :email %><br>
        </div>
        <div class="col-md-4">
            <%= form.email_field :email, class:'form-control' %>
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-primary" value="send">
        </div>
    </div>
    <% end %>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <h3 class="w-25"> Friends List </h3>
        </div>

        <% for friend in @friends %>
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-5">
                    <% if friend.image? %>
                    <%= image_tag friend.image.url, style: 'height:70px;width:70;' %>
                    <% else %>
                    <img src="https://i.ibb.co/SK3QN1j/unknown-image.jpg" alt="unknown-image" style="width: 70px;height: 70px;">
                    <% end %>
                </div>
                <div class="col-md-7">
                    <span class="col-md-12"> <%= friend.email %> </span>
                    <%= link_to 'unfriend', friend_path(friend),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>