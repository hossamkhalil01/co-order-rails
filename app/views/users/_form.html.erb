</div>
<% end %>

<div class="card col-6" style="width: 18rem; left: 10%;">
    <div class="card-body">
        <h5 class="card-title">
            <%= form.label :image %>
        </h5>
        <h6 class="card-subtitle mb-2 text-muted">

            <%= form.file_field :image, accept: 'image/jpeg, image/gif, image/png, /image/jpg' %>
        </h6>

        <div class="card-link">
            <%= form.submit %>
        </div>
        <% end %>
    </div>
</div>